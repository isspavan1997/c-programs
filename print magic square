#include<stdio.h>
main()
{
	int n,i,j,num,a[100][100];
	scanf("%d",&n);
	i=1;j=(n/2)+1;num=1;
	while(num<=n*n)
	{
		a[i][j]=num;
		if(num%n==0)
		i++;
		else
		{
			i--;
			j++;
		}
		if(i<1)
		i=n;
		if(j>n)
		j=1;
		num++;
	}
	for(i=1;i<=n;i++)
	{
		for(j=1;j<=n;j++)
		{
			printf("%d  ",a[i][j]);
		}
		printf("\n");
	}
}
